@{
    ViewData["Title"] = "Product Category Chart";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary">Product Categories Chart</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-8 offset-2">
            <canvas id="productCategoryChart"></canvas>
        </div>
    </div>
</div>

<!-- Add the Chart.js reference here if it's not in your layout -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@section Scripts {
    <script>
        var ctx = document.getElementById('productCategoryChart').getContext('2d');
        var productCategoryChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.CategoryNames)),
                datasets: [{
                    label: 'Number of Products',
                    data: @Html.Raw(Json.Serialize(ViewBag.ProductCounts)),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0
                        }
                    }
                }
            }
        });
    </script>
}